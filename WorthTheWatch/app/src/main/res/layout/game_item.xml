<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:weightSum="1"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/away_logo"
        android:src="@android:drawable/ic_menu_gallery"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:layout_toLeftOf="@+id/watched_check"
        android:layout_toStartOf="@+id/watched_check"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="false"
        android:paddingRight="5dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/home_logo"
        android:src="@android:drawable/ic_menu_gallery"
        android:adjustViewBounds="true"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:id="@+id/score"
        android:gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/away_logo"
        android:layout_toRightOf="@+id/home_logo"
        android:layout_toEndOf="@+id/home_logo"
        android:textStyle="bold"
        android:text="0.0" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/watched_check"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:checked="false"
        android:minWidth="40dp"
        android:minHeight="40dp"
        android:maxWidth="100dp"
        android:maxHeight="100dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/date"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_toLeftOf="@+id/away_logo"
        android:layout_toRightOf="@+id/home_logo"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Stadium"
        android:id="@+id/stadium"
        android:gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/away_logo"
        android:layout_toRightOf="@+id/home_logo"
        android:textSize="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Time"
        android:id="@+id/time"
        android:gravity="center_horizontal"
        android:textSize="8dp"
        android:layout_alignRight="@+id/date"
        android:layout_below="@+id/date"
        android:layout_alignLeft="@+id/date"
        android:layout_toRightOf="@+id/home_logo"
        android:layout_toLeftOf="@+id/away_logo" />

</RelativeLayout>
