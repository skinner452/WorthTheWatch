<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="net.askinner.worththewatchfull" >


    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />



    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="net.askinner.worththewatchfull.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="net.askinner.worththewatchfull.RateGameActivity"
            android:label="@string/title_activity_rate_game" >
        </activity>
        <activity
            android:name="net.askinner.worththewatchfull.PredictedRatingActivity"
            android:label="@string/title_activity_predicted_rating" >
        </activity>
        <activity
            android:name="net.askinner.worththewatchfull.AverageRatingActivity"
            android:label="@string/title_activity_average_rating" >
        </activity>


        <activity android:name="com.amazon.device.ads.AdActivity" android:configChanges="keyboardHidden|orientation|screenSize"/>

    </application>

</manifest>
