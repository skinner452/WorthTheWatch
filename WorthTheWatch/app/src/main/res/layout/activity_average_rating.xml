<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="net.askinner.worththewatchfull.AverageRatingActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Date"
        android:id="@+id/date"
        android:gravity="center_vertical|center_horizontal"
        android:layout_alignTop="@+id/awayLogo"
        android:layout_toLeftOf="@+id/awayLogo"
        android:layout_toRightOf="@+id/homeLogo"
        android:layout_toEndOf="@+id/homeLogo"
        android:textSize="12dp"
        android:paddingTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Time"
        android:id="@+id/time"
        android:layout_below="@+id/date"
        android:layout_toLeftOf="@+id/awayLogo"
        android:layout_alignLeft="@+id/date"
        android:layout_alignStart="@+id/date"
        android:gravity="center_horizontal"
        android:textSize="12dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Stadium"
        android:id="@+id/stadium"
        android:gravity="top|center_horizontal"
        android:textSize="12dp"
        android:layout_below="@+id/time"
        android:layout_toLeftOf="@+id/awayLogo"
        android:layout_toRightOf="@+id/homeLogo"
        android:layout_toEndOf="@+id/homeLogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/channels"
        android:gravity="center_horizontal"
        android:text="Channels"
        android:layout_below="@+id/awayLogo"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="10dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/homeLogo"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@android:drawable/ic_menu_gallery"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:adjustViewBounds="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/awayLogo"
        android:src="@android:drawable/ic_menu_gallery"
        android:maxHeight="70dp"
        android:maxWidth="70dp"
        android:minHeight="70dp"
        android:minWidth="70dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:adjustViewBounds="true" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/channels"
        android:id="@+id/divider" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Average Rating"
        android:id="@+id/averageRatingTitle"
        android:layout_gravity="center_horizontal"
        android:paddingTop="10dp"
        android:layout_below="@+id/divider"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="5.00"
        android:id="@+id/averageRating"
        android:layout_gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_below="@+id/averageRatingTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Top Characteristics"
        android:id="@+id/topCharsTitle"
        android:textStyle="bold"
        android:layout_below="@+id/numRatings"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Characteristic 1"
        android:id="@+id/char1"
        android:layout_below="@+id/topCharsTitle"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="10 Ratings"
        android:id="@+id/numRatings"
        android:layout_below="@+id/averageRating"
        android:layout_centerHorizontal="true"
        android:paddingBottom="10dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit Review"
        android:id="@+id/submitReviewButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50%"
        android:id="@+id/percent1"
        android:layout_below="@+id/char1"
        android:layout_centerHorizontal="true"
        android:paddingBottom="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Characteristic 2"
        android:id="@+id/char2"
        android:layout_below="@+id/percent1"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50%"
        android:id="@+id/percent2"
        android:paddingBottom="5dp"
        android:layout_below="@+id/char2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Characteristic 3"
        android:id="@+id/char3"
        android:layout_below="@+id/percent2"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="50%"
        android:id="@+id/percent3"
        android:paddingBottom="5dp"
        android:layout_below="@+id/char3"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
